#!/bin/bash

set -e
bin="$(dirname $BASH_SOURCE)"
cd $bin/..
export NODE_ENV=dev
PATH="node_modules/.bin:$PATH"

if [[ ! -e "node_modules/.bin/nodemon" ]] ; then
  echo "Installing node packages..."
  npm install
fi

run () {
  if [[ -n "$restart" ]] ; then
    which growlnotify > /dev/null && growlnotify -m "Page Shot Server build started." || echo "Page Shot Server build started."
  fi
  make server
  if [[ -n "$restart" ]] ; then
    which growlnotify > /dev/null && growlnotify -m "Page Shot Server build finished." || echo "Page Shot Server build finished."
  fi
  node -e 'require("babel-polyfill"); require("./build/server/server");'
}

help () {
  echo "Usage: $(basename $0) [--forever|-f]"
  echo "  Run the server"
  echo "    --no-auto"
  echo "      Do not look for changes to the server and rebuild/restart"
}

playsound () {
  if [[ -e /usr/bin/afplay ]] ; then
    afplay $1 &
  fi
}

no_auto=
restart=

while [ -n "$1" ] ; do
  case "$1" in
    help|-h|--help)
      help
      exit
      ;;
    --no-auto)
      no_auto=1
      shift
      ;;
    --restart)
      # Hidden option for use by nodemon
      restart=1
      no_auto=1
      shift
      ;;
    *)
      help
      exit 2
      ;;
  esac
done

if [[ -z "$no_auto" ]] ; then
  nodemon \
    -w server -w static -w shared \
    -w Makefile \
    -e .js,.scss,.css,.png,.svg,.ttf,.sql,.sh \
    --exec bash $0 -- --restart
else
  run
fi
